                    @Html.DisplayFor(modelItem => item.Room.Hall_Code)


                }
            </td>
            <td>
                @if (item.FirstDay == "Monday" || item.LastDays == "Monday")
                {
                    @Html.DisplayFor(modelItem => item.StartDate.TimeOfDay)

                    @Html.DisplayFor(modelItem => item.EndDate.TimeOfDay)
                    <br />
                    @Html.DisplayFor(modelItem => item.course.Course_code)
                    @Html.DisplayFor(modelItem => item.course.Course_Name)
                    <br />
                    @Html.DisplayFor(modelItem => item.professor.Professor_Name)

                    @Html.DisplayFor(modelItem => item.Room.Hall_Code)
                }
            </td>
            
            <td>
                @if (item.FirstDay == "Tuesday" || item.LastDays == "Tuesday")
                {
                    @Html.DisplayFor(modelItem => item.StartDate.TimeOfDay)

                    @Html.DisplayFor(modelItem => item.EndDate.TimeOfDay)
                    <br />
                    @Html.DisplayFor(modelItem => item.course.Course_code)
                    @Html.DisplayFor(modelItem => item.course.Course_Name)
                    <br />
                    @Html.DisplayFor(modelItem => item.professor.Professor_Name)

                    @Html.DisplayFor(modelItem => item.Room.Hall_Code)
                }
            </td>
            <td>
                @if (item.FirstDay == "Wendseday" || item.LastDays == "Wendseday")
                {
                    @Html.DisplayFor(modelItem => item.StartDate.TimeOfDay)

                    @Html.DisplayFor(modelItem => item.EndDate.TimeOfDay)
                    <br />
                    @Html.DisplayFor(modelItem => item.course.Course_code)
                    @Html.DisplayFor(modelItem => item.course.Course_Name)
                    <br />
                    @Html.DisplayFor(modelItem => item.professor.Professor_Name)

