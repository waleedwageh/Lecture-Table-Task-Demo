                {
                    @Html.DisplayFor(modelItem => item.StartDate.TimeOfDay)

                    @Html.DisplayFor(modelItem => item.EndDate.TimeOfDay)
                    <br />
                    @Html.DisplayFor(modelItem => item.course.Course_code)
                    @Html.DisplayFor(modelItem => item.course.Course_Name)
